.content{
  width: 100%;
}
.title{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 20rpx;
 
  border-top: 20rpx solid #ccc;
  border-bottom: 20rpx solid #ccc;
  font-size: 28rpx;
}
.detail{
  width: 100%;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
}
.detail view{
  height: 100rpx;
  line-height: 100rpx;
}
.detail textarea{
  height: 300rpx;
  border: 2rpx solid #000;
  margin-bottom: 20rpx;
}
button{
  color: #fff;
  background: rgb(220,53,22)
}
.remark{
  width: 100%;
  display: flex;
  border-bottom: 2rpx solid #ccc;
  align-items: center;
  height: 100rpx;
  font-size: 36rpx;
}
.remark view{
  padding-left: 20rpx;
  line-height: 100rpx;

}
.remark input{
  height: 100rpx;
  line-height: 100rpx;
  
}