.list {
  width: 100%;
  flex-direction: column;
  display: flex;
}
.list .item {
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: space-around;
  background: #ccc;
  height: 80rpx;
  line-height: 80rpx;
  align-items: center;
  font-size: 28rpx;
}
.top {
  width: 100%;
  height: 80rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  
}
.top view{
  flex: 1;
  text-align: center;
  height: 80rpx;
  line-height:80rpx;
  border-bottom:2px solid #ccc;
}
.top .click {
  border-bottom:10rpx solid #1e82d2;
  color: #1e82d2
}
.pass{
  color: #1e82d2
}
