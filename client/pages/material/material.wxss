.content{
  width: 100%;
  background: #ccc;
  overflow: hidden;
}
.machineinfo{
  width:100%;
  height: 300rpx;
  background: #fff;
  padding-left: 30rpx;
  margin: 40rpx 0;
  display: flex;
  flex-direction: column;
}
.machineinfo view{
 height: 80rpx;
 line-height: 80rpx;
 width: 100%;
}
button{
  background: rgb(220,53,22);
  color: #fff;
  
}
.addmaterial{
  width: 100%;
  display: flex;
  padding-left: 30rpx;
  flex-direction: column
}
.addmaterial .item {
  display: flex;
  width: 100%;
  height: 100rpx;
  align-items: center;
}
.number{
  width: 100%;
  text-align: center;
}
.addmaterial .item input{
  width: 100rpx;
  border: 2rpx solid #000;
  padding-left: 20rpx
}