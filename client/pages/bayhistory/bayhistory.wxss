.content{
  width: 100%;
}

.list {
  width: 100%;
  flex-direction: column;
  display: flex;
}
.list .item {
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: space-around;
  border-bottom:2rpx solid #ccc;
  height: 80rpx;
  line-height: 80rpx;
  align-items: center,

}
.list .title{
  background: #ccc;
}
.list .item view{
  flex: 1;
  text-align: center;
   font-size: 28rpx;
}
.list .item :nth-child(1){
  flex: 2;
  font-size: 28rpx;
} 