
.content{
  width: 100%;

}
.userinfo{
  width: 100%;
  display: flex;
  flex-direction: column;
  border-bottom: 20rpx solid #ccc;
}
.userinfo .item {
  width: 100%;
  height: 120rpx;
  border-bottom: 4rpx solid #ccc;
  display: flex;
  margin-left: 20rpx;
  align-items: center;
}
.upload{
  width: 100%;
}
.upload-title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
}
.upload-content{
  display: flex;
  width: 100%;
  
}
.upload-content .item{
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center;
}
.upload-content .item image{
  width: 80%;
  height: 200rpx;
}
.upload-content .item view{
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  
}